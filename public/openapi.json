{
  "openapi": "3.1.0",
  "info": {
    "title": "FTP Trainer Backend",
    "version": "1.0.0",
    "description": "Backend API for training program and Strava activities.",
    "x-operationId-note": "operationId is an internal label; always use the literal path keys under `paths` as the URL."
  },
  "x-agent-rules": {
    "general": [
      "Use only the literal path keys under `paths` for URLs; never derive URLs from operationId.",
      "When user asks for analysis, call tools first without extra questions.",
      "Always start each conversation by calling getServerTime with tz=Europe/Istanbul."
    ],
    "time": [
      "Call getServerTime.",
      "Set today's date in YYYY-MM-DD.",
      "If 'yesterday' is needed, subtract 1 day from today."
    ],
    "program": [
      "Call getProgram to fetch the program.",
      "If program is missing, ask for confirmation; on approval, call createProgram.",
      "If program exists, find today's workout by matching workouts.date."
    ],
    "strava": [
      "If user says 'dünkü antrenmanı analiz et', call getStravaActivities with from=yesterday, to=today.",
      "If user says 'son 2 hafta', call getStravaActivities with from=today-14, to=today.",
      "If multiple activities exist, analyze the longest/most recent and present options."
    ],
    "health": [
      "Health metrics (sleep, HRV, body battery, stress) must be provided by the user.",
      "If missing, ask: 'uyku skoru, HRV, body battery, stres değerlerini paylaşır mısın?'"
    ],
    "analysis": [
      "Give a short summary first: total duration, TSS/intensity, trend.",
      "Then compare plan vs actual.",
      "Then give recommendations and offer plan updates if needed."
    ],
    "updates": [
      "If user says 'değiştir', call updateProgramDay.",
      "Before any update, ask for explicit confirmation.",
      "Before updating, call getProgram and read today's workout.",
      "When calling updateProgramDay, send only a patch (do not send full workout)."
    ],
    "language": [
      "Reply in Turkish.",
      "Keep responses short, clear, and practical."
    ]
  },
  "servers": [
    {
      "url": "https://bahadir-ftptrainer.vercel.app"
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "Program": {
        "type": "object",
        "properties": {
          "ftp_current": { "type": "number" },
          "ftp_target": { "type": "number" },
          "plan_start": { "type": "string" },
          "plan_end": { "type": "string" },
          "generated_at": { "type": "string" },
          "weeks": { "type": "array", "items": { "type": "object" } },
          "workouts": { "type": "array", "items": { "type": "object" } }
        }
      }
    }
  },
  "security": [
    { "apiKey": [] }
  ],
  "paths": {
    "/api/program": {
      "get": {
        "operationId": "getProgram",
        "summary": "Get current training program",
        "responses": {
          "200": {
            "description": "Program exists or not",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "exists": { "type": "boolean" },
                    "program": { "$ref": "#/components/schemas/Program" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/program/public": {
      "get": {
        "operationId": "getProgramPublic",
        "summary": "Get program from KV or fallback to default schedule",
        "responses": {
          "200": {
            "description": "Program from KV or default schedule",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "program": { "$ref": "#/components/schemas/Program" },
                    "source": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/program/create": {
      "post": {
        "operationId": "createProgram",
        "summary": "Create program from default schedule or custom body",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "force": { "type": "boolean" },
                  "program": { "$ref": "#/components/schemas/Program" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Program created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "created": { "type": "boolean" },
                    "program": { "$ref": "#/components/schemas/Program" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Program already exists"
          }
        }
      }
    },
    "/api/program/day": {
      "patch": {
        "operationId": "updateProgramDay",
        "x-openai-body-name": "body",
        "summary": "Update a workout by date (requires patch or workout)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "patch": { "type": "object" },
                  "workout": { "type": "object" }
                },
                "required": ["date"],
                "oneOf": [
                  { "required": ["patch"] },
                  { "required": ["workout"] }
                ]
              },
              "examples": {
                "patch": {
                  "value": { "date": "2025-12-30", "patch": { "duration": 75, "description": "Updated" } }
                },
                "workout": {
                  "value": {
                    "date": "2025-12-30",
                    "workout": {
                      "date": "2025-12-30",
                      "dayOfWeek": "Salı",
                      "type": "sweet_spot",
                      "title": "Sweet Spot",
                      "duration": 65,
                      "description": "...",
                      "phase": "base",
                      "week": 3,
                      "isRecoveryWeek": false
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Workout updated"
          },
          "400": {
            "description": "patch or workout is required"
          },
          "404": {
            "description": "Workout not found"
          }
        }
      }
    },
    "/api/chat": {
      "post": {
        "operationId": "postChatMessage",
        "summary": "Append a message to conversation log",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Message stored" },
          "400": { "description": "Message is required" }
        }
      }
    },
    "/api/program/day/update": {
      "patch": {
        "operationId": "updateProgramDayChanges",
        "x-openai-body-name": "body",
        "summary": "Update a workout by date using a changes object",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "changes": { "type": "object" }
                },
                "required": ["date", "changes"]
              },
              "examples": {
                "update": {
                  "value": {
                    "date": "2025-12-31",
                    "changes": {
                      "title": "FTP Test",
                      "description": "Recovery fazi sonunda FTP degerlendirmesi.",
                      "duration": 60,
                      "tss": 80,
                      "detail": {
                        "warmup": "10dk @55%, 10dk @65%, 5dk @75%, 2x1dk @100% / 1dk @50%, 5dk @50%",
                        "main": "20dk @105% FTP",
                        "cooldown": "5dk @60%, 5dk @50%, 5dk @40%"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Workout updated" },
          "400": { "description": "date and changes are required" },
          "404": { "description": "Workout not found" }
        }
      }
    },
    "/api/program/day/swap": {
      "patch": {
        "operationId": "swapProgramDays",
        "x-openai-body-name": "body",
        "summary": "Swap workouts between two dates",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dateA": { "type": "string" },
                  "dateB": { "type": "string" }
                },
                "required": ["dateA", "dateB"]
              },
              "examples": {
                "swap": {
                  "value": {
                    "dateA": "2025-12-31",
                    "dateB": "2026-01-01"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Workouts swapped" },
          "400": { "description": "dateA and dateB are required" },
          "404": { "description": "Workout not found" }
        }
      }
    },
    "/api/data/strava": {
      "get": {
        "operationId": "getStravaActivities",
        "summary": "Get Strava activities for a date range",
        "parameters": [
          { "name": "from", "in": "query", "required": true, "schema": { "type": "string" } },
          { "name": "to", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Strava activities"
          }
        }
      }
    },
    "/api/data/aggregate": {
      "get": {
        "operationId": "getAggregateData",
        "summary": "Deprecated: aggregate endpoint disabled",
        "deprecated": true,
        "responses": {
          "410": { "description": "Aggregate endpoint disabled" }
        }
      }
    },
    "/api/strava/tokens": {
      "post": {
        "operationId": "storeStravaTokens",
        "summary": "Store Strava tokens in KV",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "access_token": { "type": "string" },
                  "refresh_token": { "type": "string" },
                  "expires_at": { "type": "number" }
                },
                "required": ["access_token", "refresh_token", "expires_at"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Stored" }
        }
      }
    },
    "/api/program/day/tss": {
      "patch": {
        "operationId": "updateWorkoutTss",
        "summary": "Deprecated: TSS updates are disabled",
        "deprecated": true,
        "responses": {
          "410": { "description": "TSS updates are disabled" }
        }
      }
    },
    "/api/program/day/replace": {
      "patch": {
        "operationId": "replaceWorkout",
        "x-openai-body-name": "body",
        "summary": "Replace a workout with generated plan or full replacement",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string" },
                  "workout": { "type": "object" },
                  "tss": { "type": "number" },
                  "duration": { "type": "number" },
                  "type": { "type": "string" },
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "detail": { "type": "object" },
                  "myWhooshWorkout": { "type": "string" }
                },
                "required": ["date"],
                "oneOf": [
                  { "required": ["workout"] },
                  { "required": ["tss"] }
                ]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Workout replaced" },
          "400": { "description": "Invalid input" },
          "404": { "description": "Workout not found" }
        }
      }
    },
    "/api/time": {
      "get": {
        "operationId": "getServerTime",
        "summary": "Get current time for a timezone",
        "parameters": [
          { "name": "tz", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Current time payload"
          },
          "400": {
            "description": "Invalid timezone"
          }
        }
      }
    }
  }
}
